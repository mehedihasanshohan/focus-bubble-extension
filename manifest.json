{
  "manifest_version": 3,
  "name": "Focus Bubble",
  "version": "1.0",
  "description": "Stay focused with quotes, timer, and site blocker.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "scripting",
    "alarms"
    ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
